const list = [1,2,3,5,6,8,10];

getRndmNumberUnique(1, 10, list);
console.log(getRndmNumberUnique(1,10,list));

function getRndmNumberUnique(min, max, list){
    let isFound = false;
    let randomInt;
    //senza punto ! significa isFound === true?
    //con punto ! significa isFound === false?
    // isFound = !isFound

    while(!isFound){
        randomInt = getRndInteger(min, max);
        if (!list.includes(randomInt)){
            isFound = true;
        }
    }
    return randomInt;
}




function getRndInteger(min, max) {
    return Math.floor(Math.random() * (max - min + 1) ) + min;
};



const blacklist = [
    1,
    3,
    5,
    7,
    9,
    11,
    13
];

function generateUniqueRandomNumber (min,max,list) {
    // this is our randomUniqueNumber
    let randomNumber;
    // this is our flag
    let isFound = false;

    //while our flag is false
    while (isFound !== false) {
        //we assign to randomNumber a value between our (min,max):
        randomNumber = getRndInteger(min,max);
        // if our randomNumber IS NOT CONTAINED inside our blacklist is found become isfound = true
        if (!blacklist.includes(randomNumber)) {
            isFound = true;
    };
};